{
  "manifest_version": 2,
  "name": "SPC",
  "description": "Inserting special characters made easy.",
  "version": "1.0.0",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["build/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["build/main.css"],
      "js": ["build/shortcut.js"]
    }
  ]
}
